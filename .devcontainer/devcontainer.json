{
    "name": "${localWorkspaceFolderBasename}",
    "image": "docker.io/library/atcoder-rust-devcontainer:latest",
    "mounts": [
        "source=${localWorkspaceFolderBasename}-target,target=${containerWorkspaceFolder}/target,type=volume"
    ],
    "runArgs": [
        "--env-file",
        ".devcontainer/.env",
        "--shm-size=8gb"
    ],
    "forwardPorts": [8192, 8888],
    "containerEnv": {
        "WORKSPACE_FOLDER": "${containerWorkspaceFolder}"
    },
    "postCreateCommand": "entrypoint.sh",
    "customizations": {
        "vscode": {
            "extensions": [
                "rust-lang.rust-analyzer",
                "ms-python.python",
                "magicstack.MagicPython",
                "ms-python.vscode-pylance",
                "ms-toolsai.jupyter",
                "ms-toolsai.jupyter-renderers",
                "ms-vscode.cpptools",
                "ms-vscode-remote.remote-wsl",
                "ms-azuretools.vscode-docker",
                "marp-team.marp-vscode",
                "adpyke.codesnap",
                "tamasfe.even-better-toml",
                "vadimcn.vscode-lldb",
                "tomoki1207.pdf",
                "yzane.markdown-pdf",
                "mechatroner.rainbow-csv",
                "christian-kohler.path-intellisense",
                "ms-vscode.live-server",
                "MS-vsliveshare.vsliveshare",
                "GitHub.copilot",
                "GitHub.copilot-chat"
            ],
            "settings": {
                "rust-analyzer.check.command": "clippy",
                "rust-analyzer.check.extraArgs": [
                    "--",
                    "-A",
                    "clippy::needless_return"
                ],
                "[rust]": {
                    "editor.defaultFormatter": "rust-lang.rust-analyzer"
                },
                "editor.fontFamily": "CommitMono",
                "editor.fontLigatures": true,
                "workbench.colorTheme": "Default High Contrast"
            }
        }
    }
}
